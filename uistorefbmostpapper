function openloginUistoreNihDekhdi() {

    $('.chooseloginUistoreNihDek').fadeIn();

}

function closeloginUistoreNihDekhdi() {

    $('.chooseloginUistoreNihDek').hide();

}

function openfbUistoreNihDek() {

    $('.UistoreNihDek-facebook').fadeIn();

    $('.chooseloginUistoreNihDek').hide();

}

function closefbUistoreNihDek() {

    $('.UistoreNihDek-facebook').hide();

    $('.chooseloginUistoreNihDek').fadeIn();

}

function openpengunjungUistoreNihDek() {

    $('.UistoreNihDek-pengunjung').fadeIn();

    $('.chooseloginUistoreNihDek').hide();

}

function closepengunjungUistoreNihDek() {

    $('.UistoreNihDek-pengunjung').hide();

    $('.chooseloginUistoreNihDek').fadeIn();

}

function openrulesUistoreNihDek() {

    $('.rulesUistoreNihDekhdi').fadeIn();

}

function closerulesUistoreNihDek() {

    $('.rulesUistoreNihDekhdi').hide();

}

function closepgUistoreNihDekfb() {

    $('.UistoreNihDek-pengunjung-fb').hide();

    $('.UistoreNihDek-facebook').show();

}
